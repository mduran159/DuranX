<!-- _ProductModal.cshtml -->
<div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel">Product Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Product details will be loaded here -->
            </div>
        </div>
    </div>
</div>

<script>
    function loadProductDetail(productId) {
        $.ajax({
            url: '/Products?handler=ProductDetail',  // Endpoint to load the partial view
            type: 'GET',
            data: { productId: productId },
            success: function (result) {
                // Load the result into the modal body
                $('#productModal .modal-body').html(result);
                // Show the modal
                $('#productModal').modal('show');
            },
            error: function (error) {
                console.log("Error loading product details:", error);
            }
        });
    }
</script>